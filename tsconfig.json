{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "target": "ES2015",
    // "suppressImplicitAnyIndexErrors": true,
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "types": ["unplugin-vue-define-options/macros-global", "node", "vite/client", "vitest/globals"],
    "paths": {
        "@site/*": ["./site/*"],
    },
  }
}
